<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/accomodation_listitem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Majutus Saaremaal ja Kuressaares"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/accomodation_listitem_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/accomodation_listitem_title"
            android:text="Broneeri majutus läbi veebisaidi Booking.com"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/accomodation_listitem_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/accomodation_listitem_subtitle"
            android:maxLines="2"
            android:text="Kõige soodsamad pakkumised Saaremaal. Parim hind garanteeritud!"
            android:textColor="@color/black"
            android:textSize="13sp" />


    </RelativeLayout>

</LinearLayout>