<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/events_listitem_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Esmaspäev"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/events_listitem_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27.03"
            android:textSize="23sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/events_listitem_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:text="Füsioterapeut Lauri Rannama loeng “Valust Vabanemine Ja Liikumine Kui Tervis”"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/events_listitem_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/events_listitem_heading"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:text="Saaremaa Spa Hotell Meri"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/events_listitem_stick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/events_listitem_heading"
            android:layout_toRightOf="@id/events_listitem_location"
            android:text=" | " />

        <TextView
            android:id="@+id/events_listitem_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/events_listitem_heading"
            android:layout_toRightOf="@id/events_listitem_stick"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:text="Kategooria:Õpituba Kõigile"
            android:textSize="14sp" />

    </RelativeLayout>
</LinearLayout>